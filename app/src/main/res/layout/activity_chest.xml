<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ChestActivity">


    <pl.droidsonroids.gif.GifImageView
        android:adjustViewBounds="true"
        android:src="@drawable/malechest1"
        android:id="@+id/imageViewmalecheststask1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_margin="4dp"
        android:gravity="center"
        android:onClick="oncklickGotoFragmentChest1"
        android:text="Exercise 1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewmalechesttask2"
        app:layout_constraintStart_toStartOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:adjustViewBounds="true"
        android:src="@drawable/chest2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Exercise 2"
        android:id="@+id/imageViewmalechesttask2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_margin="4dp"
        android:onClick="onCklikcGoTomaleChestfragment2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewmalechesttask3"
        app:layout_constraintStart_toEndOf="@+id/imageViewmalecheststask1"
        app:layout_constraintTop_toBottomOf="@+id/containerchest"
        tools:srcCompat="@tools:sample/avatars" />

    <pl.droidsonroids.gif.GifImageView
        android:adjustViewBounds="true"
        android:src="@drawable/chest3"
        android:onClick="onCklikcGoTomaleChestfragment3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Exercise 3"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@+id/containerchest"
        android:id="@+id/imageViewmalechesttask3"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewmalechesttask4"
        app:layout_constraintStart_toEndOf="@+id/imageViewmalechesttask2"
        tools:srcCompat="@tools:sample/avatars" />

    <pl.droidsonroids.gif.GifImageView
        android:adjustViewBounds="true"
        android:src="@drawable/malechest4"
        android:onClick="onCklikcGoTomaleChestfragment4"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Exercise 4"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@+id/containerchest"
        android:id="@+id/imageViewmalechesttask4"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewmalechesttask3"
        tools:srcCompat="@tools:sample/avatars" />

    <FrameLayout
        android:orientation="vertical"
        android:id="@+id/containerchest"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewmalecheststask1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tiujedelalworkout" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
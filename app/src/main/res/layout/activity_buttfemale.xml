<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".Buttfemale">


    <pl.droidsonroids.gif.GifImageView
        android:adjustViewBounds="true"
        android:src="@drawable/buttgiftfemale1"
        android:id="@+id/textviewbuttfemalestask1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_margin="4dp"
        android:background="@color/black"
        android:gravity="center"
        android:onClick="oncklickGotoFemaleFragmentbuuts1"
        android:text="Exercise 1"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textviewbuttfemalestask2"
        app:layout_constraintStart_toStartOf="parent" />

        <pl.droidsonroids.gif.GifImageView
            android:adjustViewBounds="true"
            android:src="@drawable/buttfemale2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Exercise 2"
            android:id="@+id/textviewbuttfemalestask2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:onClick="oncklickGotoFemaleFragmentbuuts2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textviewbuttfemalestask3"
            app:layout_constraintStart_toEndOf="@+id/textviewbuttfemalestask1"
            app:layout_constraintTop_toBottomOf="@+id/containerfemalebuut"
            tools:srcCompat="@tools:sample/avatars" />

        <pl.droidsonroids.gif.GifImageView
            android:adjustViewBounds="true"
            android:src="@drawable/buttfemale3"
            android:onClick="oncklickGotoFemaleFragmentbuuts3"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Exercise 3"
            android:layout_margin="4dp"
            app:layout_constraintTop_toBottomOf="@+id/containerfemalebuut"
            android:id="@+id/textviewbuttfemalestask3"
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textviewbuttfemalestask4"
            app:layout_constraintStart_toEndOf="@+id/textviewbuttfemalestask2"
            tools:srcCompat="@tools:sample/avatars" />

        <pl.droidsonroids.gif.GifImageView
            android:adjustViewBounds="true"
            android:src="@drawable/femalebutt4"
            android:onClick="oncklickGotoFemaleFragmentbuuts4"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Exercise 4"
            android:layout_margin="4dp"
            app:layout_constraintTop_toBottomOf="@+id/containerfemalebuut"
            android:id="@+id/textviewbuttfemalestask4"
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textviewbuttfemalestask3"
            tools:srcCompat="@tools:sample/avatars" />

        <FrameLayout
            android:orientation="vertical"
            android:id="@+id/containerfemalebuut"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/textviewbuttfemalestask1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tiujedelalworkout" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
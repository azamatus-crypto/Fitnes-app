<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ArmsBuildActivity">

    <androidx.cardview.widget.CardView
        android:padding="4dp"
        android:layout_margin="4dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/containerarms"
        android:orientation="horizontal"
        android:id="@+id/cardviewmalearms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <pl.droidsonroids.gif.GifImageView
                android:adjustViewBounds="true"
                android:src="@drawable/malearms1"
                android:layout_marginLeft="4dp"
                android:textColor="@color/white"
                android:background="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Exercise 1"
                android:id="@+id/imageViewmalearmsstask1"
                android:onClick="oncklickGotoFragment1"
                android:layout_width="100dp"
                android:layout_height="70dp"/>

            <pl.droidsonroids.gif.GifImageView
                android:src="@drawable/malearms2"
                android:textColor="@color/white"
                android:background="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Exercise 2"
                android:id="@+id/imageViewmalearmstask2"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:onClick="onCklikcGoTomalearmsfragment2"/>

            <pl.droidsonroids.gif.GifImageView
                android:src="@drawable/malearms3"
                android:onClick="onCklikcGoTomalearmsfragment3"
                android:textColor="@color/white"
                android:background="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Exercise 3"
                android:id="@+id/imageViewmalearmstask3"
                android:layout_width="100dp"
                android:layout_height="70dp"/>

            <pl.droidsonroids.gif.GifImageView
                android:src="@drawable/malearms4"
                android:onClick="onCklikcGoTomalearmsfragment4"
                android:textColor="@color/white"
                android:background="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Exercise 4"
                android:id="@+id/imageViewmalearmstask4"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginRight="4dp"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:orientation="vertical"
        android:id="@+id/containerarms"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/cardviewmalearms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tiujedelalworkout" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
